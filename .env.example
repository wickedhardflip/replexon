# RePlexOn Configuration
# Copy to .env and customize

# REQUIRED: Change this to a random string (python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-me-to-a-random-string

# Application
APP_HOST=0.0.0.0
APP_PORT=9847
DEBUG=false

# Database (default: data/replexon.db)
# DATABASE_URL=sqlite:///data/replexon.db

# Backup paths (server-side)
BACKUP_LOG_PATH=/var/log/plex-backup.log
BACKUP_SCRIPT_PATH=/usr/local/bin/backup-plex.sh

# Cron management
CRON_EDIT_ENABLED=false
CRON_USER=root

# Log polling interval (seconds)
LOG_POLL_INTERVAL=60

# Manual backup cooldown (seconds)
BACKUP_COOLDOWN=300
